.indexTop{
    width: 100%;
    height: 480rpx;
    position: relative;
}
.indexTop image{
    width: 100%;
    height: 480rpx;
}
.indexTop view{
    width: 100%;
    height: 480rpx;
    position: absolute;top: 0;left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffffff;
    font-size: 56rpx;
}
.indexTop view text{
    color: #d4c329;
}
.menu{
    width: 100%;
    height: 350rpx;
    position: relative;
}
.menu .menuMain{
    width: 100%;
    height: 450rpx;
    background: #ffffff;
    position: absolute;top: -60rpx;left: 0;
    border-top-left-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.menuMain view{
    width: 250rpx;
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    font-weight: 550;
    border-radius: 30rpx;
}
.menuMain view:first-child{
    background: linear-gradient(to bottom,#649adc,#a7c3e7);
}
.menuMain view:last-child{
    background: linear-gradient(to bottom,#649adc,#a7c3e7);
}
.menuMain view image{
    width: 48rpx;
    height: 48rpx;
}