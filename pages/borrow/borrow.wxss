/* pages/borrow/borrow.wxss */
page{
    background-color: #f2f2f2;
}
.container{
    display: block;
    width: 95%;
    margin: 20rpx auto;
}
.form-item{
    width: 100%;
    height: 100rpx;
    background-color: #ffffff;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1rpx solid #f2f2f2;
}
.form-item view{
    width: 250rpx;
}
.form-item view:first-child text,
.form-item view:last-child text,
.goReg navigator{
    color: red;
}
.form-item input{
    width: 100%;
}
.loginBtn{
    margin: 60rpx 0;
    background: linear-gradient(to right,#4f9dfd,#5f57f8);
    color: white;
    border: none;
    border-radius: 30rpx;
    padding: 10px 20px;
    font-size: 16px;
}