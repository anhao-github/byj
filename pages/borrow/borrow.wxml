<!--pages/borrow/borrow.wxml-->
<form bindsubmit="login" class="container">
  <view class="form-item">
    <view><text>*</text>借用说明</view>
    <input type="text" placeholder="    请输入理由" />
    <view><text>0</text>/20</view>
  </view>
  <view class="form-item">
    <view><text>*</text>归还时间</view>
    <picker mode="date" value="{{times}}" bindchange="bindDateChange">
      <view style="width: 350rpx;height: 60rpx;">{{times}}</view>
      <input type="text" value="{{times}}" style="display: none;" placeholder="请选择时间" />
    </picker>
    <view></view>
  </view>
  <button form-type="submit" class="loginBtn">提交</button>
</form>