.deviceDetail{
    width: 95%;
    height: 20rpx auto;
    padding: 20rpx 20rpx 120rpx 20rpx;
    box-sizing: border-box;
    background-color: #ffffff;
    border-radius: 10rpx;
}
.title{
    font-size: 36rpx;
    font-weight: 550;
}
.classify{
    margin: 20rpx 0;
    color: #666;
    font-size: 28rpx;
}
.deviceDetail image{
    width: 100%;
}
.detail{
    font-size: 28rpx;
}
.btn{
    width: 100%;
    height: 100rpx;
    color: #2659e7;
    background-color: #ffffff;
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
    font-weight: 550;
    position: fixed;bottom: 0rpx;left:0rpx;
}