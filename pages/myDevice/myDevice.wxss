/* pages/myDevice/myDevice.wxss */
.container{
    width: 100%;
    height: 100vh;
}
.tabBar{
    width: 100%;
    height: 90rpx;
    background-color: #ffffff;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.tabBar .active{
    display: flex;
    align-items: center;
    height: 75rpx;
    border-bottom: 4px solid red;
}
.list{
    width: 100%;
    height: calc(100vh - 180rpx);
}
.list .list-item{
    width: 95%;
    height: 330rpx;
    background-color: #ffffff;
    margin: 20rpx auto;
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    border-radius: 10rpx;
    font-size: 28rpx;
}
.deviceName{
    font-size: 36rpx;
    font-weight: 550;
}
.borrowStatus{
    font-weight: 550;
    color: red;
    display: flex;
    align-items: center;
}
