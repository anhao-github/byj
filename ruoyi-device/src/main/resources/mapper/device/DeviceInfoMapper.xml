<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.device.mapper.DeviceInfoMapper">

    <resultMap type="DeviceInfo" id="DeviceInfoResult">
        <result property="deviceId"     column="device_id"      />
        <result property="typeId"       column="type_id"        />
        <result property="deviceName"   column="device_name"    />
        <result property="deviceModel"  column="device_model"   />
        <result property="deviceImg"    column="device_img"     />
        <result property="deviceRemark" column="device_remark"  />
        <result property="deviceStatus" column="device_status"  />
        <result property="createBy"     column="create_by"      />
        <result property="createTime"   column="create_time"    />
        <result property="updateBy"     column="update_by"      />
        <result property="updateTime"   column="update_time"    />

        <!-- 一对一关联 -->
        <association property="type" column="type_id" select="selectType"/>
    </resultMap>
    <!-- 设备类别映射 -->
    <resultMap type="DeviceType" id="typeResult">
        <result property="typeId" column="type_id" />
        <result property="typeName" column="type_name" />
    </resultMap>

    <!-- 设备类别查询 -->
    <select id="selectType" parameterType="Long" resultMap="typeResult">
        select * from device_type where type_status = 0 and type_id = #{typeid}
    </select>
    <insert id="insertDeviceInfo" parameterType="DeviceInfo" useGeneratedKeys="true" keyProperty="deviceId">
        insert into device_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="typeId != null">type_id,</if>
            <if test="deviceName != null and deviceName != ''">device_name,</if>
            <if test="deviceModel != null">device_model,</if>
            <if test="deviceStatus != null">device_status,</if>
            <if test="deviceImg != null">device_img,</if>
            <if test="deviceRemark != null">device_remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="typeId != null">#{typeId},</if>
            <if test="deviceName != null and deviceName != ''">#{deviceName},</if>
            <if test="deviceModel != null">#{deviceModel},</if>
            <if test="deviceStatus != null">#{deviceStatus},</if>
            <if test="deviceImg != null">#{deviceImg},</if>
            <if test="deviceRemark != null">#{deviceRemark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <delete id="deleteDeviceInfoByIds" >
        delete from device_info where device_id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <update id="updateDeviceInfo" parameterType="DeviceInfo">
        update device_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="typeId != null">type_id=#{typeId},</if>
            <if test="deviceName != null and deviceName != ''">device_name=#{deviceName},</if>
            <if test="deviceModel != null">device_model=#{deviceModel},</if>
            <if test="deviceStatus != null">#{deviceStatus},</if>
            <if test="deviceImg != null">device_img=#{deviceImg},</if>
            <if test="deviceRemark != null">device_remark=#{deviceRemark},</if>
            <if test="createBy != null">create_by=#{createBy},</if>
            <if test="createTime != null">create_time=#{createTime},</if>
            <if test="updateBy != null">update_by=#{updateBy},</if>
            <if test="updateTime != null">update_time=#{updateTime},</if>
        </trim>
        where device_id = #{deviceId}
    </update>
    <select id="selectDeviceInfoById" parameterType="Long" resultMap="DeviceInfoResult">
        select * from device_info where device_id=#{deviceId}
    </select>
        <sql id="selectDeviceInfoVo">
            select * from device_info
        </sql>
    <select id="selectDeviceInfoList" parameterType="DeviceInfo" resultMap="DeviceInfoResult">
        select * from device_info
        <where>
            <if test="typeId != null">and type_id = #{typeId}</if>
            <if test="deviceName != null  and deviceName != ''"> and device_name like concat('%', #{deviceName}, '%')</if>
            <if test="deviceModel != null  and deviceModel != ''"> and device_model like concat('%', #{deviceModel}, '%')</if>
            <if test="deviceRemark != null  and deviceRemark != ''"> and device_remark like concat('%', #{deviceRemark}, '%')</if>
            <if test="deviceStatus != null "> and device_status = #{deviceStatus}</if>
        </where>
    </select>
</mapper>